<% title "April 26-27, 2024" %>

<%= render "hero_section_2024" %>
<%= render "section_separator" %>

<%= render "section", title_element: "h2", title: "Speakers" do %>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-2 xl:grid-cols-3 gap-y-10 sm:gap-2 p-4 w-full md:w-5/6">
    <% Current.event.lineup_members.confirmed.each.with_index do |member, index| %>
      <% if member.talk %>
        <%= link_to talk_path(member.talk_id), class: [
          card_rotation(index),
          "rounded-md transition ease-in-out h-min",
          "hover:shadow-brutal hover:-translate-x-1 hover:-translate-y-1 hover:scale-110 hover:z-10"
        ] do %>
          <%= render "avatar_card", avatar: member.speaker.avatar, title: member.speaker.name, subtitle: member.talk.name %>
        <% end %>
      <% else %>
        <%= render "avatar_card", avatar: member.speaker.avatar, title: member.speaker.name, subtitle: member.role %>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= render "section_separator" %>
