<%# locals: (gallery:, highlight: false) %>

<%= render "section", title: gallery.title || "Highlights", highlight: do %>
  <% if gallery.description.present? %>
    <%= render "prose" do %>
      <%= render_markdown gallery.description %>
    <% end %>
  <% end %>
  <% if gallery.highlights.any? %>
    <%= render "image_gallery", images: gallery.highlights %>
  <% end %>
  <div class="flex gap-4">
    <%= link_to "Watch videos", gallery.videos_url, class: "btn-primary", target: "_blank", rel: "noopener" %>
    <% if gallery.photos_url.present? %>
      <%= link_to "View photos", gallery.photos_url, class: "btn-secondary", target: "_blank", rel: "noopener" %>
    <% end %>
  </div>
<% end %>
