<% title Current.event.subtitle || Current.event.name %>

<% hi = section_highlighter %>

<%= render "hero_section" %>
<% if Current.event.schedule&.published? %>
  <%= render "schedule", schedule: Current.event.schedule, highlight: !hi %>
<% end %>
<% if Current.event.blog_posts.published.any? %>
  <%= render "blog", highlight: !hi %>
<% end %>
<%= render "speakers", highlight: !hi %>
<%= render "tickets", highlight: !hi %>
<% if Current.event.community_partners.any? %>
  <%= render "community_partners", highlight: !hi %>
<% end %>
<%= render "sponsors/sponsors", highlight: !hi %>
<% if Current.event.venue %>
  <%= render "venue", venue: Current.event.venue, highlight: !hi %>
<% end %>
<% if Current.event.upcoming? %>
  <%= render "newsletter", highlight: !hi %>
<% end %>
