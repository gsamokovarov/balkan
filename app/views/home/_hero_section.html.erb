<%= render "section" do %>
  <div class="grid gap-8">
    <div class="flex flex-col sm:flex-row gap-8" data-controller="hero">
      <div class="flex flex-col gap-8">
        <div>
          <h1 class="text-4xl sm:text-5xl font-black">
            Balkan Ruby is <span class="text-banitsa-500">back for good</span>
          </h1>
          <div class="text-2xl sm:text-3xl font-semibold mt-3 text-white/70">
            April 25-26, 2025 in Sofia, Bulgaria
          </div>
        </div>

        <p class="text-xl max-w-prose">
          Your favorite Balkan Ruby conference is back for good!
        </p>

        <button data-action="hero#scrollToTickets" class="btn-primary w-fit">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 256 256"
            class="w-5 h-5 text-current"
          >
            <g color="currentColor" weight="regular">
            <path
              d="M24,167.2a7.9,7.9,0,0,1,6.4-7.8,32.1,32.1,0,0,0,0-62.8A7.9,7.9,0,0,1,24,88.8V64a8,8,0,0,1,8-8H224a8,8,0,0,1,8,8V88.8a7.9,7.9,0,0,1-6.4,7.8,32.1,32.1,0,0,0,0,62.8,7.9,7.9,0,0,1,6.4,7.8V192a8,8,0,0,1-8,8H32a8,8,0,0,1-8-8Z"
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="16"
              ></path>
            </g>
          </svg>
          <span>Buy a ticket</span>
        </button>
      </div>
    </div>

    <div class="
      -mx-4
      px-4
      h-72
      flex
      overflow-x-auto
      snap-x
      snap-mandatory
      sm:mx-0
      sm:px-0
      sm:snap-none
      sm:h-auto
      sm:grid
      sm:items-start
      sm:grid-rows-[repeat(3,160px)]
      sm:grid-cols-3
      gap-4
    ">
      <%= image_tag "memories/2024/top.jpg",
        alt: "Ruby Banitsa event",
        class: "snap-always snap-center border-2 border-white rounded-md shrink-0 w-10/12 sm:w-full h-full object-cover row-span-2 col-span-2",
        lazy: true %>

      <%= image_tag "memories/2024/xavi_no_stress.jpg",
        alt: "Ruby Banitsa event",
        class: "snap-always snap-center border-2 border-white rounded-md shrink-0 w-10/12 sm:w-full h-full object-cover row-span-2",
        lazy: true %>

      <%= image_tag "memories/2024/irina.jpg",
        alt: "Ruby Banitsa event",
        class: "snap-always snap-center border-2 border-white rounded-md shrink-0 w-10/12 sm:w-full h-full object-cover col-span-3",
        lazy: true %>
    </div>

    <div class="prose prose-lg prose-invert text-white/70">
      <p>
        Photos by <%= link_to "Dana Tileva", "https://dribbble.com/ladeviant", class: "link-secondary" %>
      </p>
    </div>
  </div>
<% end %>
