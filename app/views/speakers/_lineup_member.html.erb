<%# locals: (member:, rotation_class:) %>

  <%= link_to member.talk ? talk_path(member.talk_id) : "#", class: [
    rotation_class,
    "rounded-md transition ease-in-out h-min",
    "hover:shadow-brutal hover:-translate-x-1 hover:-translate-y-1 hover:scale-110 hover:z-10",
    !member.talk && "pointer-events-none",
  ] do %>
    <%= render "avatar_card", avatar: member.speaker.avatar, title: member.speaker.name, subtitle: member.talk&.name || member.role %>
  <% end %>
