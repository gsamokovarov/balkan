<div data-controller="balkan-support" class="fixed bottom-4 right-4">
  <div data-balkan-support-target="widget" class="fixed bottom-20 right-4 w-80 h-fit bg-white rounded-lg shadow-xl border-2 border-black transform translate-y-full opacity-0 transition-all duration-300 ease-in-out">
    <div class="bg-banitsa-500 text-white px-4 py-3 rounded-t-md flex items-center justify-between">
      <div class="flex items-center">
        <div class="w-8 h-8 bg-banitsa-700 rounded-full flex items-center justify-center text-sm text-white font-bold mr-3">
          <svg fill="none" viewBox="-4 -4 24 24" role="presentation">
            <path fill="currentcolor" fill-rule="evenodd" clip-rule="evenodd" d="M8 1.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4 4a4 4 0 1 1 8 0 4 4 0 0 1-8 0m-2 9a3.75 3.75 0 0 1 3.75-3.75h4.5A3.75 3.75 0 0 1 14 13v2h-1.5v-2a2.25 2.25 0 0 0-2.25-2.25h-4.5A2.25 2.25 0 0 0 3.5 13v2H2z"></path>
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-sm">Balkan Support</h3>
          <p class="text-xs text-banitsa-100">Offline</p>
        </div>
      </div>
      <button data-action="click->balkan-support#toggle" class="text-banitsa-100 hover:text-white">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <div data-balkan-support-target="messages" class="h-64 overflow-y-auto p-4 bg-gray-50"></div>

    <form data-action="submit->balkan-support#sendMessage" class="p-4 border-t bg-white">
      <div class="flex space-x-2">
        <input data-balkan-support-target="input" type="text" placeholder="Type your message..." class="flex-1 border border-gray-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-banitsa-500" autocomplete="off">
        <button data-balkan-support-target="sendButton" type="submit" class="bg-banitsa-500 hover:bg-banitsa-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
          Send
        </button>
      </div>
    </form>

    <div class="px-4 pb-3 bg-white rounded-b-lg">
      <p class="text-xs text-gray-500">This widget is a joke! For <strong>real</strong> support, contact us at <%= link_to Current.event.contact_email, "mailto:#{Current.event.contact_email}", class: "link-primary" %>.</p>
    </div>
  </div>

  <button data-action="click->balkan-support#toggle" class="fixed bottom-4 right-4 bg-banitsa-500 hover:bg-banitsa-600 border-2 border-black text-white rounded-full p-4 shadow-lg transition-all duration-200 flex items-center justify-center">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>
  </button>
</div>
