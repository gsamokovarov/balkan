<%# locals: (variant:) %>

<div class="bg-white border-2 border-black rounded-md w-full lg:w-auto">
  <div class="flex shrink gap-4 justify-between p-4 border-b-2 border-black rounded-sm overflow-hidden text-2xl font-bold">
    <%= variant.name %>
    <div class="flex shrink gap-2">
      <% if variant.fiscal? && variant.available? %>
        <span class="badge-important text-white"><%= format_money variant.price %></span>
      <% end %>

      <% if variant.limited? && variant.available? %>
        <span class="badge-warning"><%= variant.spots_remaining %> left</span>
      <% elsif variant.limited? %>
        <span class="badge-important text-white">Sold out</span>
      <% end %>
    </div>
  </div>
  <div class="p-4">
    <h2 class="prose prose-xl">
      <%= yield %>
    </h2>
  </div>
</div>
