<% title "Sponsors" %>

<%= render "section", title: "Sponsors", title_element: "h1" do %>
  <div class="flex flex-col gap-10">
    <% @event.sponsors.each do |sponsor| %>
      <div class="flex flex-col gap-8">
        <h2 id="<%= sponsor.name %>" class="text-2xl sm:text-3xl font-extrabold">
          <%= link_to sponsor.name, sponsor.url %>
        </h2>

        <%= link_to sponsor.url do %>
          <%= image_tag sponsor.logo,
            class: "w-full md:w-1/2 h-auto p-4 bg-white rounded-md object-contain",
            lazy: true %>
        <% end %>

        <div class="prose-xl max-w-prose prose-invert text-white">
          <p>
            <%= sponsor.description.html_safe %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<%= render "section_separator" %>

<%= render "section", title: "Sponsorship", title_element: "h1" do %>
  <div class="prose-lg max-w-prose prose-invert text-white/70">
    <p>
      By sponsoring Balkan Ruby, you are helping us make a great event while
      promoting your brand to the passionate Ruby developers in Bulgaria, the
      Balkans, and beyond!
    </p>
  </div>

  <div class="flex gap-4 flex-wrap">
    <%= link_to new_sponsor_path, class: "btn-primary" do %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
        fill="currentColor"
        class="w-5 h-5"
      >
        <path
          fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 00-1.5 0v2.5h-2.5a.75.75 0 000 1.5h2.5v2.5a.75.75 0 001.5 0v-2.5h2.5a.75.75 0 000-1.5h-2.5v-2.5z"
          clip-rule="evenodd"
        />
      </svg>
      <span>Sponsor us</span>
    <% end %>
  </div>
<% end %>

<%= render "section_separator" %>
<%= render "tickets/cta" %>
