<section class="center">
  <div class="text-3xl sm:text-4xl font-extrabold pb-8">Thank you, community partners! ðŸ™‡</div>
  <div class="grid grid-cols-2 gap-8 lg:grid-cols-5">
    <% CommunityPartner.all.each do |partner| %>
      <%= link_to partner.url, title: partner.name, class: "flex justify-center w-full h-16 p-2 bg-white rounded-md" do %>
        <%= image_tag partner.logo, class: "w-auto h-full object-contain", alt: partner.name, lazy: true %>
      <% end %>
    <% end %>
  </div>
</section>

<section class="center">
  <div class="text-3xl sm:text-4xl font-extrabold pb-8">Thank you, sponsors! ðŸ™‡</div>
  <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 pb-8">
    <% Current.event.sponsors.basic.each do |sponsor| %>
      <%= link_to sponsors_path(anchor: sponsor.name), title: sponsor.name, class: "flex justify-center w-full h-24 p-4 bg-white rounded-md" do %>
        <%= image_tag sponsor.logo, class: "w-auto h-full object-contain", lazy: true %>
      <% end %>
    <% end %>
    <% Current.event.sponsors.party.each do |sponsor| %>
      <%= link_to sponsors_path(anchor: sponsor.name), title: sponsor.name, class: "flex justify-center w-full h-24 p-4 bg-white rounded-md" do %>
        <%= image_tag sponsor.logo, class: "w-auto h-full object-contain", lazy: true %>
      <% end %>
    <% end %>
  </div>
  <div class="grid grid-cols-2 gap-8 lg:grid-cols-4">
    <% Current.event.sponsors.travel.each do |sponsor| %>
      <%= link_to sponsors_path(anchor: sponsor.name), title: sponsor.name, class: "flex justify-center w-full h-16 p-4 bg-white rounded-md" do %>
        <%= image_tag sponsor.logo, class: "w-auto h-full object-contain", lazy: true %>
      <% end %>
    <% end %>
  </div>
</section>

<section class="center">
