<% title "Newsletter" %>

<%= render "section", title: "Newsletter", title_element: "h1" do %>
  <%= turbo_frame_tag "newsletter" do %>
    <%= render "prose", class: "my-10" do %>
      <p>
        <% if @subscriber.errors[:email].any? %>
          Email <span class="text-banitsa-600"><%= @subscriber.email %></span> is already subscribed.
        <% else %>
          Thank you for subscribing to our newsletter! We'll keep you up to date on
          <span class="text-banitsa-600"><%= @subscriber.email %></span>.
        <% end %>
      </p>
    <% end %>
  <% end %>
<% end %>
