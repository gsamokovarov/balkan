<%# locals: (proposal:, readonly: false) %>

<%= turbo_frame_tag "proposal" do %>
  <%= marketing_form model: proposal, url: (proposal.access_url unless proposal.new_record?) do |f| %>
    <%= f.text_input :name, required: true, disabled: readonly %>
    <%= f.email_input :email, required: true, disabled: readonly %>
    <%= f.text_area_input :bio, disabled: readonly %>
    <%= f.text_input :company, disabled: readonly %>
    <%= f.text_input :location, disabled: readonly %>
    <%= f.text_input :social_url, disabled: readonly %>
    <%= f.text_input :github_url, disabled: readonly %>
    <%= f.text_input :title, required: true, disabled: readonly %>
    <%= f.text_area_input :description, disabled: readonly %>
    <%= f.text_area_input :notes, disabled: readonly %>

    <% unless readonly %>
      <%= f.captcha if proposal.new_record? %>

      <%= f.submit(proposal.new_record? ? "Submit" : "Update") %>
    <% end %>
  <% end %>
<% end %>
