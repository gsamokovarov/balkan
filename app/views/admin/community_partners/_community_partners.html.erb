<%# locals: (community_partners:) %>

<%= admin_table community_partners do
  column "#",   -> { link_to it.id, [:admin, it.event, it] }
  column :name, -> { link_to it.name, [:admin, it.event, it] }
  column :url,  -> { link_to it.url, it.url, class: "text-indigo-600 hover:underline", target: "_blank", rel: "noopener" }
  column :logo, -> { link_to it.logo.attached? ? "Yes" : "No", [:admin, it.event, it] }

  column do
    admin_button(:danger, :small, delete: [:admin, it.event, it, page: params[:page]]) { "Delete" }
  end
end %>
