<%# locals: (tickets:) %>

<%= admin_table tickets do
  column "#",    -> { link_to it.id, it.event_access_url, "data-turbo": false }
  column :name,  -> { link_to it.name, it.event_access_url, "data-turbo": false }
  column :email, -> { link_to it.email, it.event_access_url, "data-turbo": false }
  column :date,  -> { link_to it.created_at.to_date, it.event_access_url, "data-turbo": false }
  column :type,  -> { it.ticket_type.name }
  column :shirt, -> { it.shirt_size }
  column :price, -> { format_money it.price }

  column do
    admin_button(:primary, :small, post: email_admin_event_ticket_path(it.event, it)) { "Send" }
  end
end %>
