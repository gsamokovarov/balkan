<%# locals: (form:, removable: true) %>

<div class="space-y-3 py-1 sm:relative border-b border-gray-200 pb-4 last:border-b-0 last:pb-0">
<%= form.text_input :name, required: true %>
<%= form.email_input :email, required: true %>
<%= form.select_input :shirt_size, %w[XS S M L XL XXL], required: true %>

<% if removable %>
<button type="button" data-action="appendable#remove" class="sm:absolute -top-3 right-0">
<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" class="w-7 h-7 stroke-red-600 hover:stroke-red-300">
<path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>
</button>
<% end %>
</div>
