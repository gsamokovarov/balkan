<%# locals: (lineup_members:) %>

<%= admin_table lineup_members do
  column "#",      -> { link_to _1.id, [:admin, _1.event, _1] }
  column :speaker, -> { link_to _1.speaker&.name, admin_speaker_path(_1) }
  column :role
  column :talk,    -> { link_to_if _1, truncate(_1.talk&.name, length: 30) || "-", admin_talk_path(_1) }
end %>
