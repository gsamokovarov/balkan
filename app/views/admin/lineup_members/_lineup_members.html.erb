<%# locals: (lineup_members:) %>

<%= admin_table lineup_members do
  column "#", -> { link_to it.id, [:admin, it.event, it] }

  column :status do |member|
    link_to [:admin, member.event, member] do
      if member.pending?
        admin_badge :warning, member.status.humanize
      elsif member.cancelled?
        admin_badge :danger, member.status.humanize
      else
        admin_badge :success, member.status.humanize
      end
    end
  end

  column :role,    -> { link_to it.role, [:admin, it.event, it] }
  column :speaker, -> { link_to it.speaker.name, admin_speaker_path(it.speaker) }

  column :talk do |member|
    if member.talk
      link_to member.talk.name, admin_talk_path(member.talk)
    else
      "-"
    end
  end
end %>
