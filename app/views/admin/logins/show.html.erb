<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag "logo-ruby.png", class: "mx-auto h-10 w-auto" %>
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Admin</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= admin_form @user, url: admin_login_path do |f| %>
      <% if @user.errors.any? %>
        <%= render "alert" do %>
          <% @user.errors.full_messages.each do |message| %>
            <p class="text-red-700 text-sm font-medium">
              <%= message %>
            </p>
          <% end %>
        <% end %>
      <% end %>

      <%= f.text_input :username, required: true, autocomplete: "username" %>
      <%= f.password_input :password, required: true, autocomplete: "current-password" %>
      <%= f.submit "Sign in" %>
    <% end %>
  </div>
</div>
