<%# locals: (talks:) %>

<%= admin_table talks do
  column "#",           -> { link_to it.id, admin_talk_path(it) }
  column :name,         -> { link_to truncate(it.name, length: 30), admin_talk_path(it) }
  column :description,  -> { truncate it.description, length: 30 }

  column :speakers do |talk|
    talk.speakers.map { link_to it.name, admin_speaker_path(it) }.join(", ").html_safe
  end
end %>
