<%# locals: (embeddings:) %>

<%= admin_table embeddings do
  column "#",          -> { link_to it.id, [:admin, it.event, it] }
  column :name,        -> { link_to it.name, [:admin, it.event, it] }
  column :description, -> { link_to truncate(it.description, length: 50), [:admin, it.event, it] }

  column do
    admin_button(:secondary, :small, link: it.url, target: "_blank", rel: "noopener") { "View" }
  end
end %>
