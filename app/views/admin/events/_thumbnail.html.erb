<%# locals: (event:) %>

<section class="relative w-[960px] h-[540px] p-16 flex flex-col gap-8 bg-banitsa-50 overflow-hidden">
  <div>
    <h1 class="text-4xl sm:text-5xl font-black">
      Balkan Ruby is about <span class="text-banitsa-600">the long term</span>
    </h1>
    <div class="text-2xl sm:text-3xl font-semibold mt-3 text-gray-500">
      April 25-26, 2025 in Sofia, Bulgaria
    </div>
  </div>
  <div class="grid grid-cols-6 w-full mx-auto shrink">
    <% event.lineup_members.confirmed.each.with_index do |member, index| %>
      <%= tag.div class: card_rotation(index) do %>
        <%= render "avatar_card", avatar: member.speaker.avatar, title: member.speaker.name %>
      <% end %>
    <% end %>
  </div>
</section>
