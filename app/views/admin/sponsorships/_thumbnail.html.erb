<%# locals: (sponsorship:) %>

<% qrcode = RQRCode::QRCode.new sponsorship.sponsor.url %>

<div class="space-y-6">
  <section class="relative w-[960px] h-[540px] p-16 bg-banitsa-50">
    <%= render "admin/shared/balkan_ruby_overlay" %>

    <div class="<%= card_rotation(0) %> absolute top-8 right-8 bg-white p-4 border-2 border-black rounded-md max-w-64 font-semibold">
      <%= sponsorship.variant.name %>
    </div>

    <div class="absolute bottom-8 right-8 border-2 border-black rounded-md bg-white w-32">
      <%== qrcode.as_svg use_path: true, viewbox: true %>
    </div>

    <div class="relative h-full flex flex-col justify-center items-center gap-8">
      <% if sponsorship.sponsor.logo.attached? %>
        <%= image_tag sponsorship.sponsor.logo, class: "max-w-1/2 max-h-64 object-contain" %>
      <% end %>
      <h2 class="text-2xl font-bold text-center text-gray-900">
        <%= sponsorship.sponsor.name %>
      </h2>
      <p class="text-lg text-center font-semibold text-gray-500">
        Thank you for your support!
      </p>
    </div>
  </section>
</div>
