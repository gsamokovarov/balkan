<% title Current.event.name %>

<div class="flex flex-col gap-12">
  <%= render "section", title: "Health" do %>
    <%= render "stats", data: {
      "Attendees" => @orders.reject(&:fully_refunded?).sum { _1.tickets.size },
      "Tickets gross" => format_money(@orders.sum(&:amount)),
      "Refunded amount" => format_money(@orders.sum(&:refunded_amount)),
      "Newsletter subscribers" => Current.event.subscribers.count,
      "Unfinished orders" => Current.event.orders.where("completed_at IS NULL").count,
    } %>
  <% end %>

  <%= render "section", title: "Tickets" do %>
    <%= render "admin/tickets/tickets", tickets: @orders.flat_map(&:tickets) %>
  <% end %>

  <%= render "section", title: "Shirts" do %>
    <% shirt_sizes = @orders.flat_map(&:tickets).group_by(&:shirt_size).transform_values(&:size) %>

    <%= render "stats", data: {
      "XS (available 5)" => shirt_sizes["XS"] || 0,
      "S (available 30)" => shirt_sizes["S"] || 0,
      "M (available 55)" => shirt_sizes["M"] || 0,
      "L (available 50)" => shirt_sizes["L"] || 0,
      "XL (available 35)" => shirt_sizes["XL"] || 0,
      "XXL (available 20)" => shirt_sizes["XXL"] || 0,
    } %>
  <% end %>

  <%= render "embedding",title: "Accounting", button_name: "View in Google Sheets",
    link: "https://docs.google.com/spreadsheets/d/1DSlirCX6E-LFo0sv4Sa6eQTKR1Gm0O5gk1ugHylOJx4/edit?usp=sharing" %>
</div>
