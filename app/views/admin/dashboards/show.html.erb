<% title "Dashboard" %>

<div class="p-4 sm:p-6 lg:p-8 sm:border-2 sm:border-gray-300 sm:rounded-lg">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Tickets</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all tickets by orders.</p>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3 pl-4 pr-3 text-left text-sm font-medium uppercase tracking-wide text-gray-500 sm:pl-3">Name</th>
              <th scope="col" class="px-3 py-3 text-left text-sm font-medium uppercase tracking-wide text-gray-500">Email</th>
              <th scope="col" class="px-3 py-3 text-left text-sm font-medium uppercase tracking-wide text-gray-500">T-shirt</th>
              <th scope="col" class="px-3 py-3 text-left text-sm font-medium uppercase tracking-wide text-gray-500">Price</th>
              <th scope="col" class="relative py-3 pl-3 pr-4 sm:pr-0" />
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% @orders.each do |order| %>
              <tr class="border-t border-gray-200">
                <th
                  colspan="3"
                  scope="colgroup"
                  class="bg-banitsa-50 px-3 py-3 pl-4 text-left text-sm font-semibold text-gray-900 sm:pl-3"
                >
                Order #<%= order.id %>
                <% if order.refunded_at? %>
                  (<span class="text-banitsa-600">Refunded</span>)
                <% end %>
                </th>
                <th
                  colspan="2"
                  scope="colgroup"
                  class="bg-banitsa-50 px-3 py-3 text-left text-sm font-semibold <%= order.refunded_at? ? "text-banitsa-600" : "text-gray-900" %>"
                >
                  <%= format_money order.price %>
                </th>
              </tr>
              <% order.tickets.each do |ticket| %>
                <tr class="border-t border-gray-300">
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-500 sm:pl-3"><%= ticket.name %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= ticket.email %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= ticket.shirt_size %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= format_money ticket.price %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
          <tfoot>
            <tr class="border-t border-gray-300">
              <th scope="row" colspan="2" class="hidden sm:table-cell sm:pt-6" />
              <th scope="row" class="hidden py-6 text-left text-sm font-medium uppercase text-gray-500 sm:table-cell">Total</th>
              <th scope="row" class="px-3 py-6 text-left text-sm font-medium uppercase text-gray-500 sm:hidden">Total</th>
              <td scope="row" class="px-3 py-6 text-left text-sm font-semibold text-gray-900 sm:pr-0"><%= format_money @orders.sum(:price) %></td>
            </tr>
          <tfoot>
        </table>
      </div>
    </div>
  </div>
</div>

