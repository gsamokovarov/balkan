<%# locals: (data:) %>

<dl class="grid grid-cols-1 gap-x-8 gap-y-16 text-center lg:grid-cols-3">
  <% data.each do |title, value| %>
    <div class="mx-auto flex max-w-xs flex-col gap-y-4 border-2 border-gray-300 rounded-lg p-4 sm:p-6 lg:p-8">
      <dt class="text-base leading-7 text-gray-600"><%= title %></dt>
      <dd class="order-first text-3xl font-semibold tracking-tight text-gray-900 sm:text-5xl"><%= value %></dd>
    </div>
  <% end %>
</dl>
