<%# locals: (order:) %>

<% if order.invoice %>
  <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Documents</h2>

    <div class="flex flex-col md:flex-row gap-4">
      <iframe src="<%= admin_order_path order, format: :pdf, locale: :en %>" class="w-full h-[800px] border-2 border-gray-300 rounded-md"></iframe>
      <iframe src="<%= admin_order_path order, format: :pdf, locale: :bg %>" class="w-full h-[800px] border-2 border-gray-300 rounded-md"></iframe>
    </div>
  </div>
<% end %>
