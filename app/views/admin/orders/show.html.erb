<%= render "section", title: "Order ##{@order.id}", description: "Total: #{format_money @order.amount}" do %>
  <% if @order.fully_refunded? %>
    <%= render "alert" do %>
      This order has been fully refunded. The tickets below won't be attending
    <% end %>
  <% elsif @order.partially_refunded? %>
    <%= render "alert" do %>
      This order has been partially refunded by <%= format_money @order.refunded_amount %>.
    <% end %>
  <% end %>

  <%= render "tickets", order: @order %>
  <%= render "documents", order: @order %>
<% end %>
