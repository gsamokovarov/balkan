<%# locals: (order:) %>

<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
  <h2 class="text-lg font-medium text-gray-900 mb-4">Tickets</h2>

  <table class="min-w-full divide-y divide-gray-300">
    <thead>
      <tr>
        <th scope="col" class="py-3 pl-4 pr-3 text-left text-sm font-medium uppercase tracking-wide text-gray-500 sm:pl-3">Name</th>
        <th scope="col" class="px-3 py-3 text-left text-sm font-medium uppercase tracking-wide text-gray-500">Email</th>
        <th scope="col" class="px-3 py-3 text-left text-sm font-medium uppercase tracking-wide text-gray-500">Shirt size</th>
        <th scope="col" class="px-3 py-3 text-left text-sm font-medium uppercase tracking-wide text-gray-500">Price</th>
        <th scope="col" class="relative py-3 pl-3 pr-4 sm:pr-0" />
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 bg-white">
      <% order.tickets.each do |ticket| %>
        <tr class="border-t border-gray-300">
          <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-3">
            <%= ticket.name %> <span class="text-gray-400">#<%= ticket.id %></span>
          </td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
            <%= ticket.email %>
          </td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
            <%= ticket.shirt_size %>
          </td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900">
            <%= format_money ticket.price %>
          </td>
          <td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-gray-900">
            <%= link_to "View ticket", ticket.event_access_url %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
