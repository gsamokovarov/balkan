<%# locals: (form:, schedule:, date:, **options) %>

<div class="space-y-3 sm:flex sm:items-end sm:gap-2">
  <%= form.hidden_field :id %>
  <%= form.hidden_field :date, value: date.iso8601 %>
  <%= form.time_input :time, required: true %>
  <%= form.text_input :description, placeholder: "Talk / Break / Registration", required: true %>
  <%= form.select_input :lineup_member_id, schedule.event.lineup_members.map { [it.speaker.name, it.id] }, label: "Member", include_blank: true %>

  <button type="button" data-action="appendable#remove" class="self-start">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" class="w-7 h-7 stroke-red-600 hover:stroke-red-300">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  </button>
</div>
