<%= section_navigation :ticketing %>

<%= render "section", title: "Ticket types", cta: -> {
  admin_button(:primary, link: new_admin_event_ticket_type_path) { "New ticket type" }
} do %>
  <% if @ticket_types.any? %>
    <%= render "ticket_types", ticket_types: @ticket_types %>
  <% else %>
    <%= render "empty_state" do %>
      <% admin_button(:primary, link: new_admin_event_ticket_type_path) { "New ticket type" } %>
    <% end %>
  <% end %>
<% end %>
