<%# locals: (name:, tabs:) %>

<div class="mb-6">
  <div class="grid grid-cols-1 sm:hidden">
    <select aria-label="<%= name %>" onchange="window.location.href = this.value" class="col-start-1 row-start-1 w-full appearance-none rounded-md bg-white py-2 pr-8 pl-3 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 dark:bg-white/5 dark:text-gray-100 dark:outline-white/10 dark:*:bg-gray-800 dark:focus:outline-indigo-500">
      <% tabs.each do |tab| %>
        <option value="<%= tab[:path] %>" <%= "selected" if current_page?(tab[:path]) %>>
          <%= tab[:name] %><%= " ðŸŒ" if tab[:global] %>
        </option>
      <% end %>
    </select>
    <svg viewBox="0 0 16 16" fill="currentColor" data-slot="icon" aria-hidden="true" class="pointer-events-none col-start-1 row-start-1 mr-2 size-5 self-center justify-self-end fill-gray-500 dark:fill-gray-400">
      <path d="M4.22 6.22a.75.75 0 0 1 1.06 0L8 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06l-3.25 3.25a.75.75 0 0 1-1.06 0L4.22 7.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" fill-rule="evenodd" />
    </svg>
  </div>
  <div class="hidden sm:block">
    <div class="border-b border-gray-200 dark:border-white/10">
      <nav aria-label="<%= name %>" class="-mb-px flex space-x-8">
        <% tabs.each do |tab| %>
          <%= link_to tab[:path],
              aria_current: (current_page?(tab[:path]) ? "page" : nil),
              class: [
                "flex items-center border-b-2 px-1 py-4 text-sm font-medium whitespace-nowrap",
                current_page?(tab[:path]) ?
                  "border-indigo-500 text-indigo-600 dark:border-indigo-400 dark:text-indigo-400" :
                  "border-transparent text-gray-500 hover:border-gray-200 hover:text-gray-700 dark:text-gray-400 dark:hover:border-white/20 dark:hover:text-white"
              ] do %>
            <%= tab[:name] %>
            <% if tab[:global] %>
              <svg class="ml-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
              </svg>
            <% end %>
          <% end %>
        <% end %>
      </nav>
    </div>
  </div>
</div>
