<%# locals: (speakers:) %>

<%= admin_table speakers do
  column "#",   -> { link_to it.id, admin_speaker_path(it) }
  column :name, -> { link_to it.name, admin_speaker_path(it) }
  column :bio,  -> { truncate it.bio, length: 30 }
  column :github_url
  column :social_url
  column :avatar, -> { it.avatar.attached? ? "Yes" : "No" }
end %>
