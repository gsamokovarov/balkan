<% title "Ticket for #{@ticket.name}" %>

<%= render "section", title: "Ticket", title_element: "h1" do %>
  <div
    data-ticket-target="template"
    class="relative border-2 border-white rounded-md flex flex-col gap-6 p-4 w-full sm:w-72"
    >
    <button type="button" data-action="ticket#remove" class="absolute right-4 top-4 invisible ">
      <svg
        class="rotate-45 h-6 w-6 stroke-white/70 hover:stroke-banitsa-500 hover:cursor-pointer"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        strokeWidth="2"
        strokeLinecap="round"
        strokeLinejoin="round"
        >
        <path d="M18 12H6"></path>
        <path d="M12 6v12"></path>
      </svg>
    </button>

    <label class="flex flex-col gap-3">
      <span class="text-xl">Attendee name</span>
      <input
        disabled
        type="text"
        value="<%= @ticket.name %>"
        class="
          w-full
          border-2
          rounded-md
          border-neutral-600
          px-4
          py-2
          text-black
          text-ellipsis
          focus:border-black
          focus:outline-white
        "
      />
    </label>

    <label class="flex flex-col gap-3">
      <span class="text-xl">Attendee email</span>
      <input
        disabled
        type="text"
        value="<%= @ticket.email %>"
        class="
          w-full
          border-2
          rounded-md
          border-neutral-600
          px-4
          py-2
          text-black
          text-ellipsis
          focus:border-black
          focus:outline-white
        "
      />
    </label>

    <label class="flex flex-col items-baseline gap-3">
      <span class="text-xl w-50">T-shirt size</span>
      <input
        disabled
        type="text"
        value="<%= @ticket.shirt_size %>"
        class="
          w-full
          border-2
          rounded-md
          border-neutral-600
          px-4
          py-2
          text-black
          text-ellipsis
          focus:border-black
          focus:outline-white
        "
      />
    </label>
  </div>
<% end %>
