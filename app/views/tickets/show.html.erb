<% title @ticket_type.type %>

<%= render "section", title: "Tickets", title_element: "h1" do %>
  <form class="flex flex-col gap-6" data-controller="ticket">
    <div data-ticket-target="tickets" class="flex flex-wrap gap-12">
      <%= render "tickets/single_ticket" %>
    </div>
    <div class="flex gap-6">
      <button type="button" class="btn-secondary" data-action="ticket#add">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
          fill="currentColor"
          class="w-5 h-5"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 00-1.5 0v2.5h-2.5a.75.75 0 000 1.5h2.5v2.5a.75.75 0 001.5 0v-2.5h2.5a.75.75 0 000-1.5h-2.5v-2.5z"
            clip-rule="evenodd"
          />
        </svg>
        <span>Add ticket</span>
      </button>
    </div>

    <div class="flex gap-6 border-t-2 border-white pt-12 mt-12">
      <button type="submit" class="btn-primary">
        Buy ticket
      </button>
    </div>
  </form>
<% end %>
