<% if Current.event.upcoming? %>
  <div class="flex flex-shrink gap-4 sm:flex-shrink-0 sm:flex-wrap sm:gap-8">
    <% Current.event.ticket_types.enabled.each do |ticket_type| %>
      <%= render "tickets/ticket_card_link", ticket_type: %>
    <% end %>
  </div>

  <% if Current.event.balkan? %>
    <div class="prose-xl max-w-prose prose-invert text-white">
      <p>
        Supporter tickets get our eternal gratitude and a hand-made gift, made by
        the organizers!
      </p>
    </div>
  <% end %>
<% else %>
  <%= render "tickets/sold_out" %>
<% end %>
